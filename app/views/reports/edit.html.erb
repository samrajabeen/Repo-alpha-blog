<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <h1>Edit Existing Report</h1>

  <% if @report.errors.any? %>
  <% @report.errors.full_messages.each do |msg| %>
  <ul>
    <li>
      <%= msg %>
    </li>
  </ul>
  <% end %>
  <% end %>

  <%= form_for @report do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>

    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
      
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  <%= link_to "<-Back", reports_path %>

</body>
</html>
